{
  "name": "mock-interview-app",
  "version": "1.0.0",
  "description": "Full-stack Mock Interview Web Application with MongoDB Atlas",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test:db": "cd backend && node test-mongodb.js",
    "clean": "rimraf frontend/node_modules backend/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "keywords": [
    "mock-interview",
    "nextjs",
    "nodejs",
    "mongodb",
    "ai",
    "voice-recognition"
  ],
  "author": "Your Name",
  "license": "MIT"
}
